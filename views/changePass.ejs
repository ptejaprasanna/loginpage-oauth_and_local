<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/5.4.2/css/font-awesome.min.css">
    <style>
        .background {background-color: orange}
    </style>
</head>
<body>
    <div class="background">
        <div class="page-header text-center">
            <h1><span class="fa fa-user-circle-o"></span> Change Password</h1>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <h3><span class="fa fa-user"></span> Local</h3>

                        <strong>Email</strong>: <%= user.local.email %><br>
                        <strong>Name</strong>: <%= user.local.name %><br>
                        <form action="/change" method="post">
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                                title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                            </div>
                            <button type="submit" class="btn btn-warning btn-lg">Change</button>
                        </form>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
